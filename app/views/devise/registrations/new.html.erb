
<div class="container">
  <div class="row">
    <div class="col-xs-3"></div>
    <div class="col-xs-6">
      <div class="form-wrapper">
        <h2>Sign up</h2>

        <div class= "text-center">
         <%= render "devise/shared/links" %>
        </div>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: 'small-text' %>
            <%= f.input :password_confirmation, required: true %>

            <%= f.input :username, required: true %>
            <%= f.input :name, required: true %>
            <%= f.input :city, required: true %>
            <%= f.input :description, required: true %>
            <%= f.input :dedication,
              collection:["occassionally", "once per month", "once per week", "more often"] %>
            <%= f.input :gender, collection:["female", "male", "other"] %>
            <%= f.input :age, required: true , as: :numeric%>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: 'btn-form' %>
          </div>
        <% end %>

      </div>

    </div>
    <div class="col-xs-3"></div>
  </div><!-- close row -->
</div><!-- close conrainer -->

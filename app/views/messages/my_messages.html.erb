<div class="container">
  <div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-8">
      <p class=" title-my-messages text-center"> my messages </p>

      <% @my_conversations.each do |user| %>
        <%#= link_to user.name, user_messages_path(user)  %>
          <div class="my_messages">
            <%if user.photo? %>
                <%= cl_image_tag (user.photo), class: "avatar-large" %>
              <%else %>
                <%= image_tag "profile_photo.jpg", class: "avatar-large" %>
            <%end%>

            <div class="my_messages-name">
              <h3><%=  user.name %></h3>
               <p><%= current_user.last_created_at(user).strftime("%m/%d/%Y") %></p>
            </div>
            <div class="my_messages-body">
              <p><%= current_user.last_message_with(user) %></p>

            </div>
            <div class="my_messages-status">
              <p class="status accepted"> go to conversation </p>
            </div>
            <p><%= link_to"", user_messages_path(user), class: "my_messages-link "%> </p>
          </div>
      <% end %>

    </div>
    <div class="col-xs-2"></div>
  </div> <!-- close row -->
</div> <!-- close container -->
